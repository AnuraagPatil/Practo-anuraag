<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_doctors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <TableLayout
        android:id="@+id/main_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TableRow>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/table_row_ele_margin"
                android:src="@drawable/ic_launcher_background"
                />

            <LinearLayout
                android:layout_margin="@dimen/table_row_ele_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Name"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_practise_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="practise"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txt_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="street , locality" />

                    <TextView
                        android:id="@+id/txt_locality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="city" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/table_row_ele_margin">

                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_column="2"
                    android:layout_margin="5dp"
                    android:numStars="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/txt_rating_val"
                    android:layout_column="2"
                    android:text="4.5"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Timing :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_fees_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="10:00 AM - 8:00 PM"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal|center_vertical|right"
                android:text="Appoint" />
        </TableRow>
    </TableLayout>

</android.support.v7.widget.CardView>