<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/experiance" />

        <TextView
            android:id="@+id/txt_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiance :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5yrs"
            android:textSize="20sp" />
    </LinearLayout>

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
            android:layout_margin="10dp"/>


    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fees"/>
    <TextView
        android:id="@+id/txt_fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees :"
        android:textSize="20sp"/>
        <TextView
            android:id="@+id/fees_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000/-"
            android:textSize="20sp"/>
    </LinearLayout>

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
            android:layout_margin="10dp"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/services"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textSize="20sp"/>
    </LinearLayout>

         <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
             android:layout_margin="10dp"/>


</LinearLayout>

        <io.github.yavski.fabspeeddial.FabSpeedDial
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:gravity="bottom|end"
            android:layout_gravity="end|bottom"
            app:fabMenu="@menu/fab_menu"
            android:isScrollContainer="true"
            app:fabBackgroundTint="@android:color/white"
            app:fabDrawableTint="?attr/colorPrimary"
            app:miniFabTitleTextColor="?attr/colorAccent">

        </io.github.yavski.fabspeeddial.FabSpeedDial>

    </FrameLayout>

</ScrollView>